{
  "extends": ["eslint:recommended"],
  "plugins": ["security"],
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "complexity": ["warn", 10],
    "max-lines-per-function": ["warn", 50],
    "max-depth": ["warn", 4],
    "max-nested-callbacks": ["warn", 3],
    "security/detect-object-injection": "error",
    "security/detect-eval-with-expression": "error",
    "no-console": ["warn", {"allow": ["warn", "error", "info"]}],
    "no-unused-vars": "warn",
    "no-var": "error",
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"]
  }
}